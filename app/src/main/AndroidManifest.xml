<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="leevro.pucpr.br.leevro19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dev"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookAddActivity"
            android:label="@string/title_activity_book_add"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.MainActivity" />
        </activity>
        <activity
            android:name=".BookProposeActivity"
            android:label="@string/title_activity_book_propose"
            android:parentActivityName=".BookAddActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.BookAddActivity" />
        </activity>
        <activity
            android:name=".BookGaleryActivity"
            android:label="@string/title_activity_book_galery"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.MainActivity" />
        </activity>
        <activity
            android:name=".BookDetailActivity"
            android:label="@string/title_activity_book_detail"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.MainActivity" />
        </activity>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.MainActivity" />
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName=".FriendsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="leevro.pucpr.br.leevro19.FriendsActivity" />
        </activity>
        <activity
            android:name=".PublicProfileActivity"
            android:label="@string/title_activity_public_profile"></activity>
    </application>

</manifest>
