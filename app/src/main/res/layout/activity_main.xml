<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="leevro.pucpr.br.leevro19.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookCover"
            android:layout_below="@+id/button6"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/button8"
            android:src="@mipmap/ic_launcher"
            android:onClick="goToBookDetail"
            android:layout_weight="1" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="NÃƒO"
                    android:id="@+id/button7"
                    android:onClick="gotoNextBook"
                    android:layout_column="0"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:color="@color/red"
                    android:background="@drawable/rounded_button_no"
                    android:textColor="@color/white"
                    style="?android:attr/borderlessButtonStyle"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="i"
                    android:id="@+id/button3"
                    android:onClick="goToBookDetail"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/circle_button_info"
                    android:textSize="30dp"
                    android:textColor="@color/blue"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:text="SIM"
                    android:id="@+id/button8"
                    android:onClick="gotoNextBook"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:color="@color/green"
                    android:background="@drawable/rounded_button_yes"
                    android:textColor="@color/white"
                    android:width="50dp"
                    android:height="50dp"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</RelativeLayout>
